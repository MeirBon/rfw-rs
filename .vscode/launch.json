    "version": "0.2.0",
    "configurations": [
        {
            "type": "lldb",
            "request": "launch",
            "name": "Launch GPU-RT debug",
            "program": "${workspaceFolder}/target/debug/gpu-rt",
            "env": {
                "RUST_BACKTRACE": "1"
            },
            "cwd": "${workspaceFolder}",
            "cargo": {
                "args": [
                    "build",
                    "-p",
                    "gpu-rt"
                ]
            },
            "sourceLanguages": [
                "rust"
            ]
        },
