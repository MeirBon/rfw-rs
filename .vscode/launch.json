    "version": "0.2.0",
    "configurations": [
        {
            "type": "lldb",
            "request": "launch",
            "name": "Launch Vulkan debug",
            "program": "${workspaceFolder}/target/debug/vulkan",
            "env": {
                "RUST_BACKTRACE": "1"
            },
            "cwd": "${workspaceFolder}",
            "cargo": {
                "args": [
                    "build",
                    "-p",
                    "vulkan"
                ]
            },
            "sourceLanguages": [
                "rust"
            ],
            "terminal": "console"
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Launch Vulkan release",
            "program": "${workspaceFolder}/target/release/vulkan",
            "env": {
                "RUST_BACKTRACE": "1"
            },
            "cargo": {
                "args": [
                    "build",
                    "--release",
                    "-p",
                    "vulkan"
                ]
            },
            "cwd": "${workspaceFolder}",
            "sourceLanguages": [
                "rust"
            ],
            "terminal": "console"
        },
